<div class="container mx-auto flex py-10 gap-5">
  <div class="max-w-[40%]">
    <img
      src="{{ product.featured_image | img_url: 'master' }}"
      alt="{{ product.title }}"
      class="w-full">
  </div>

  <div class="flex flex-col gap-y-5">
    <h2 class="text-4xl fotn-bold text-zinc-800">
      {{ product.title }}
    </h2>

    <div class="text-zinc-500">
      {{ product.description }}
    </div>

    <div class="text-2xl font-bold text-zinc-800">
      {{ product.price | money }}
    </div>

    {% form 'product', product %}
      <div class="flex flex-col gap-y-4">

        <div class="flex flex-col gap-y-2 text-zinc-500">
          <label for="id" class="font-bold">Variant</label>

          <select
            id="id"
            name="id"
            class="border px-2 py-1 rounded">
            {% for variant in product.variants %}
              <option value="{{ variant.id }}">{{ variant.title }}</option>
            {% endfor %}
          </select>
        </div>

        <div>
          <button type="submit" class="bg-teal-500 px-4 py-2 rounded text-white">
            Add to cart
          </button>
        </div>

      </div>
    {% endform %}

  </div>

</div>